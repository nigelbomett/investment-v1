{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", 
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*","backend/**/*","backend/types/**/*"],
  "exclude": ["node_modules"]
}
